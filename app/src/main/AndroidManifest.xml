<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
  package="dev.hardik.materialtabs">

  <application
    android:allowBackup="true"
    android:fullBackupContent="@xml/backup_descriptor"
    android:icon="@mipmap/ic_launcher"
    android:label="@string/app_name"
    android:theme="@style/MaterialTheme">
    <activity
      android:name=".ui.MainActivity"
      android:label="@string/app_name">
      <intent-filter>
        <action android:name="android.intent.action.MAIN" />

        <category android:name="android.intent.category.LAUNCHER" />
      </intent-filter>
      <intent-filter>
        <action android:name="android.intent.action.VIEW" />
      </intent-filter>
    </activity>
    <activity
      android:name=".ui.ScrollableTabsActivity"
      android:label="@string/title_activity_scrollable_tabs" />
    <activity
      android:name=".ui.SimpleTabsActivity"
      android:label="@string/title_activity_simple_tabs" />
    <activity
      android:name=".ui.IconTextTabsActivity"
      android:label="@string/title_activity_icon_text_tabs" />
    <activity
      android:name=".ui.IconTabsActivity"
      android:label="@string/title_activity_icon_tabs" />
    <activity
      android:name=".ui.CustomViewIconTextTabsActivity"
      android:label="@string/title_activity_custom_view_icon_text_tabs" />

  </application>

</manifest>
